<%@ Control Language="C#" AutoEventWireup="true" Inherits="System.Web.Mvc.ViewUserControl" %>
<div id="divInviteFriends" class="divContainer" style="width:99%;float:left; margin-bottom:20px; ">
    <table style="text-align: left;">
        <tr>
            <td style="font-size: 15px;">TO:</td>
            <td><input type="text" id="txtEmails" style="width: 545px;" title="Enter email addresses, separated by commas" /> </td>
        </tr>
        <tr>
            <td></td>
            <td style="font-size: 9px; color: Gray;">Enter email addresses, separated by commas</td>
        </tr>
        <tr>
            <td colspan="2"><input type="checkbox" id="SendToMe" style="margin-left: 16px; margin-right: 5px;" title="Send me a copy of this message" /><span style="font-size: 9px;">Send me a copy of this message</span></td>
        </tr>
        <tr>
            <td colspan="2" style="font-size: 15px;">Enter your message here (optional):</td>
        </tr>
        <tr>
            <td colspan="2"><textarea id="txtMessage" style="width: 580px; height: 100px; background-color:#E1E5F1;" title="Enter your message here (optional)" ></textarea></td>
        </tr>
    </table>
</div>